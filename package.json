{
  "name": "super-react-starter",
  "version": "1.0.0",
  "description": "",
  "main": "client/index.js",
  "scripts": {
    "test": "node scripts/test.js --env=jsdom",
    "build": "webpack",
    "start": "webpack-dev-server --progress --hot --inline",
    "lint": "esw webpack.config.* src tools --color",
    "lint:watch": "npm run lint -- --watch",
    "server": "node server"
  },
  "author": "weisk@step",
  "license": "ISC",
  "dependencies": {
    "accept-language": "^3.0.18",
    "antd": "^2.13.7",
    "autoprefixer": "^7.1.5",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-import": "^1.6.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.17.1",
    "clean-webpack-plugin": "^0.1.17",
    "compression": "^1.6.2",
    "compression-webpack-plugin": "^1.0.1",
    "cookie-parser": "^1.4.3",
    "copy-webpack-plugin": "^4.2.0",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "dotenv-webpack": "^1.5.4",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-15": "^1.0.2",
    "eslint": "^4.9.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "eslint-watch": "^3.1.3",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^3.0.1",
    "html-webpack-plugin": "^2.30.1",
    "ignore-styles": "^5.0.1",
    "jest": "^21.2.1",
    "js-cookie": "^2.1.4",
    "morgan": "^1.8.1",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.8",
    "prop-types": "^15.6.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.4",
    "react-router-dom": "^4.1.1",
    "react-test-renderer": "^16.0.0",
    "redux": "^3.6.0",
    "redux-devtools-extension": "^2.13.2",
    "sass-loader": "^6.0.6",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.3",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.2",
    "write-file-webpack-plugin": "^4.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "client/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/scripts/polyfills.js",
      "<rootDir>/scripts/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/client/**/__tests__/**/*.js?(x)",
      "<rootDir>/client/**/?(*.)(spec|test).js?(x)",
      "<rootDir>/client/**/App.test.js"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/scripts/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/scripts/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "jsx-a11y/href-no-hash": "off",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": [
            "invalidHref"
          ]
        }
      ]
    }
  }
}
